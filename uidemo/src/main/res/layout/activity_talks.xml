<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".talk.TalksActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/talkRecyclerView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/btnSendMessage"
        android:layout_height="0dp"/>

    <Button
        android:id="@+id/btnSendMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Send"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        />

    <EditText
        android:id="@+id/editMessage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnSendMessage"
        app:layout_constraintBottom_toBottomOf="@+id/btnSendMessage"
        android:layout_width="0dp"
        android:hint="please input message"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>